
public class BicycleTester {

	public static void main(String[] args) {
		Bicycle bike1, bike2;        
		String  owner1, owner2;                

		bike1 = new Bicycle( ); //Declare and Create Bicycle object 
		bike1.setOwnerName("Adam Smith"); //assign values to bike1                 

		bike2 = new Bicycle( ); //Declare and Create object 
		bike2.setOwnerName("Ben Jones"); //assign values to bike2                  

		//Output information on two bicycles        
		owner1 = bike1.getOwnerName( );        
		owner2 = bike2.getOwnerName( );                

		System.out.println(owner1 + " owns a bicyle");                                    
		System.out.println(owner2 + " also owns a bicycle");

	}

}